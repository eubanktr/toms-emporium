// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
 }

generator client {
  provider = "prisma-client-js"
}

model SaleListing {
  id        Int      @id @default(autoincrement())
  tcgCardId String   // Pok√©mon TCG card id (e.g. "sv4pt5-123")
  title     String?  // optional override/title
  note      String?  // condition, notes
  priceCents Int?
  quantity  Int      @default(1)
  photoUrl  String?  // later: store your uploaded image url/path
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tcgCardId])
}

model WantedListing {
  id        Int      @id @default(autoincrement())
  tcgCardId String
  title     String?
  note      String?
  maxPriceCents Int?
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tcgCardId])
}